<div class="mt-2 mb-3 container col-md-5">
  <%= form_for :term, url: search_path, method: :get, html: { class: "form-inline"} do |form| %>
	<div class="form-group">
    <%= text_field_tag :term, params[:term] ,class: "form-control" %>
  </div>
  <div class="form-group mx-sm-4">
    <%= submit_tag "Search Article", name: nil, class: 'btn-primary btn' %>
	</div>
<% end %>
</div>
